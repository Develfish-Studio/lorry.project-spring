{
  "$id": "https://develfish.studio/project-spring/root/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "title": "Generate project root",
  "description": "Generate project root directories",
  "properties": {
    "project": {
      "type": "object",
      "title": "General Info",
      "description": "This info is used to name files and directories in the target directory.",
      "properties": {
        "name": {
          "title": "Project Name",
          "default": "",
          "type": "string",
          "minLength": 2,
          "maxLength": 4
        },
        "index": {
          "title": "Index",
          "default": 0,
          "type": "integer"
        },
        "fraction": {
          "title": "Fraction",
          "default": 1.0,
          "type": "number"
        },
        "primary": {
          "title": "Primary",
          "default": false,
          "type": "boolean"
        }
      },
      "required": ["name"]
    },
    "pom": {
      "type": "object",
      "title": "Project Object Model",
      "description": "This info is used to name Maven artifacts.",
      "properties": {
        "group_id": {
          "type": "string",
          "title": "Group Id"
        },
        "artifact_id": {
          "type": "string",
          "title": "Artifact Id"
        },
        "parent": {
          "type": "object",
          "title": "Parent",
          "properties": {
            "group_id": {
              "type": "string",
              "title": "Group Id"
            },
            "artifact_id": {
              "type": "string",
              "title": "Artifact Id"
            },
            "version": {
              "type": "string",
              "title": "Version"
            }
          }
        },
        "modules": {
          "type": "array",
          "title": "Modules",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["group_id", "artifact_id", "parent"]
    }
  },
  "required": ["project"]
}